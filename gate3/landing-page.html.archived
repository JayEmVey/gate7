    <style>
        :root {
            --primary-color: #221F20;
            --accent-color: #C17817;
            --text-color: #ffffff;
            --text-secondary: rgba(255, 255, 255, 0.8);
            --animation-timing: cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Playfair Display', serif;
            line-height: 1.6;
            color: var(--text-color);
            background: var(--primary-color);
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        /* Navigation */
        nav {
            background: rgba(34, 31, 32, 0.95);
            color: var(--text-color);
            padding: 1rem 0;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            backdrop-filter: blur(10px);
        }
        
        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .logo {
            display: flex;
            align-items: center;
        }
        
        .logo img {
            height: 50px;
            width: auto;
        }
        
        .nav-links {
            display: flex;
            list-style: none;
            gap: 2rem;
        }
        
        .nav-links a {
            color: var(--text-color);
            text-decoration: none;
            transition: color 0.3s;
        }
        
        .nav-links a:hover {
            color: var(--accent-color);
        }
        
        /* Hero carousel */
        .hero { 
            margin-top: 84px; 
            min-height: 500px; 
            position: relative; 
            background: rgba(245, 237, 231, 0.1); 
            display: flex; 
            align-items: center; 
        }
        .hero-inner { 
            max-width: 1400px; 
            width: 100%; 
            margin: 0 auto; 
            padding: calc(8px * 8) calc(8px * 5); 
            display: grid; 
            grid-template-columns: 1.2fr 1fr; 
            gap: calc(8px * 8); 
            align-items: center; 
        }
        .hero-media { position: relative; }
        .carousel-track { display: flex; transition: transform .5s ease-in-out; }
        .slide { min-width: 100%; display: flex; justify-content: center; }
        
        /* Stacked photo frames */
        .photo-stack { position: relative; width: 100%; max-width: 480px; aspect-ratio: 4/3; }
        .frame { 
            position: absolute; 
            width: 100%; 
            height: 100%; 
            border-radius: 16px; 
            border: 3px solid var(--accent-color); 
            background: var(--text-color); 
            overflow: hidden; 
        }
        .frame:nth-child(1) { transform: rotate(-2deg); z-index: 1; }
        .frame:nth-child(2) { transform: rotate(4deg); z-index: 2; }
        .frame:nth-child(3) { transform: rotate(-1deg); z-index: 3; }
        .frame.active { z-index: 4; transform: rotate(0deg); }
        .frame img { width: 100%; height: 100%; object-fit: cover; display: block; }
        
        .carousel-controls { 
            display: flex; 
            gap: calc(8px * 2); 
            margin-top: calc(8px * 3); 
            justify-content: flex-start; 
        }
        .c-btn { 
            width: 44px; 
            height: 44px; 
            border-radius: 50%; 
            border: 2px solid var(--accent-color); 
            background: transparent; 
            color: var(--accent-color); 
            cursor: pointer;
            display: grid; 
            place-items: center; 
            font-size: 18px; 
            transition: all .2s; 
        }
        .c-btn:hover { 
            background: var(--accent-color); 
            color: var(--primary-color); 
        }
        
        /* Hero text content */
        .hero-content { 
            display: flex; 
            flex-direction: column; 
            gap: calc(8px * 4); 
        }
        .hero-welcome {
            color: var(--text-secondary);
            font-size: 1.2rem;
            font-weight: 400;
        }
        .hero-title { 
            color: var(--accent-color); 
            font-size: clamp(24px, 3vw, 32px); 
            font-weight: 600; 
            line-height: 1.4; 
        }
        
        .coming-soon {
            background: var(--accent-color);
            color: var(--primary-color);
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 1rem;
            display: inline-block;
            width: fit-content;
        }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* Menu */
        .menu { 
            padding: calc(8px * 12) calc(8px * 5); 
            background: var(--primary-color); 
        }
        .menu .container { 
            max-width: 1200px; 
            margin: 0 auto; 
