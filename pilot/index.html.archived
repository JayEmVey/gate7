    <link rel="icon" type="image/png" href="../images/logo-only-white.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #221F20;
            --accent-color: #C17817;
            --text-color: #ffffff;
            --text-secondary: rgba(255, 255, 255, 0.8);
            --animation-timing: cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Playfair Display', serif;
            line-height: 1.6;
            color: var(--text-color);
            background: var(--primary-color);
            overflow-x: hidden;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        /* Navigation */
        nav {
            background: rgba(34, 31, 32, 0.95);
            color: var(--text-color);
            padding: 1rem 0;
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            backdrop-filter: blur(10px);
        }
        
        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .logo {
            display: flex;
            align-items: center;
        }
        
        .logo img {
            height: 50px;
            width: auto;
        }
        
        .nav-links {
            display: flex;
            list-style: none;
            gap: 2rem;
        }
        
        .nav-links a {
            color: var(--text-color);
            text-decoration: none;
            transition: color 0.3s;
        }
        
        .nav-links a:hover {
            color: var(--accent-color);
        }
        
        /* Hero Section - Combined Hero & Hello */
        .hero {
            margin-top: 84px;
            min-height: 100vh;
            position: relative;
            background: var(--primary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: calc(8px * 8) calc(8px * 3);
            text-align: center;
        }

        .hero-content-wrapper {
            margin-bottom: calc(8px * 6);
        }
        .hero-inner {
            max-width: 1400px;
            width: 90%;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: calc(8px * 4);
        }
        .hero-media {
            position: relative;
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .carousel-track { display: flex; transition: transform .5s ease-in-out; }
        .slide { min-width: 100%; display: flex; justify-content: center; }

        /* Stacked photo frames */
        .photo-stack {
            position: relative;
            width: 100%;
            max-width: 900px;
            aspect-ratio: 16/9;
        }
        .frame {
            position: absolute;
            width: 100%;
            height: 100%;
            border-radius: 16px;
            border: 3px solid var(--text-color);
            background: var(--text-color);
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }
        .frame:nth-child(1) { transform: rotate(-1deg); z-index: 1; }
        .frame:nth-child(2) { transform: rotate(2deg); z-index: 2; }
        .frame:nth-child(3) { transform: rotate(-0.5deg); z-index: 3; }
        .frame.active { z-index: 4; transform: rotate(0deg); }
        .frame img { width: 100%; height: 100%; object-fit: cover; display: block; }

        .carousel-controls {
            display: flex;
            gap: calc(8px * 2);
            margin-top: calc(8px * 3);
            justify-content: center;
        }
        .c-btn {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            border: 2px solid var(--text-color);
            background: transparent;
            color: var(--text-color);
            cursor: pointer;
            display: grid;
            place-items: center;
            font-size: 18px;
            transition: all .2s;
        }
        .c-btn:hover {
            background: var(--text-color);
            color: var(--accent-color);
        }

        /* Hero text content */
        .hero-content {
            display: none;
        }
        .hero-welcome {
            color: var(--text-secondary);
            font-size: 1.2rem;
            font-weight: 400;
        }
        .hero-title {
            color: var(--accent-color);
            font-size: clamp(24px, 3vw, 32px);
            font-weight: 600;
            line-height: 1.4;
        }

        .coming-soon {
            background: var(--accent-color);
            color: var(--primary-color);
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 1rem;
            display: inline-block;
            width: fit-content;
        }

        /* Hello Section */
        .hello-section {
            background: rgba(245, 237, 231, 0.05);
            padding: calc(8px * 10) calc(8px * 5);
            text-align: center;
        }
        .hello-section .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .hello-greeting {
            color: var(--accent-color);
            font-size: clamp(14px, 1.2vw, 16px);
            font-weight: 400;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            margin-bottom: calc(8px * 3);
        }
        .hello-message {
            color: var(--text-color);
            font-size: clamp(28px, 4vw, 48px);
            font-weight: 400;
            line-height: 1.3;
            max-width: 900px;
            margin: 0 auto;
        }

        /* Scroll Animation Classes */
        .scroll-reveal {
            opacity: 0;
            transform: translateY(50px);
            transition: opacity 0.8s var(--animation-timing),
                        transform 0.8s var(--animation-timing);
        }

        .scroll-reveal.revealed {
            opacity: 1;
            transform: translateY(0);
        }

        .scroll-reveal-left {
            opacity: 0;
            transform: translateX(-50px);
            transition: opacity 0.8s var(--animation-timing),
                        transform 0.8s var(--animation-timing);
        }

        .scroll-reveal-left.revealed {
            opacity: 1;
            transform: translateX(0);
        }

        .scroll-reveal-right {
            opacity: 0;
            transform: translateX(50px);
            transition: opacity 0.8s var(--animation-timing),
                        transform 0.8s var(--animation-timing);
        }

        .scroll-reveal-right.revealed {
            opacity: 1;
            transform: translateX(0);
        }

        .scroll-reveal-scale {
            opacity: 0;
            transform: scale(0.9);
            transition: opacity 0.8s var(--animation-timing),
                        transform 0.8s var(--animation-timing);
        }

        .scroll-reveal-scale.revealed {
            opacity: 1;
            transform: scale(1);
        }

        /* Stagger animation delays for grid items */
        .stagger-1 { transition-delay: 0.1s; }
        .stagger-2 { transition-delay: 0.2s; }
        .stagger-3 { transition-delay: 0.3s; }
        .stagger-4 { transition-delay: 0.4s; }
        .stagger-5 { transition-delay: 0.5s; }
        .stagger-6 { transition-delay: 0.6s; }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInFromLeft {
            from {
                opacity: 0;
                transform: translateX(-100px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes slideInFromRight {
            from {
                opacity: 0;
                transform: translateX(100px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes scaleIn {
            from {
                opacity: 0;
                transform: scale(0.8);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }
        
        /* Menu */
        .menu { 
            padding: calc(8px * 12) calc(8px * 5); 
            background: var(--primary-color);
            position: relative;
            filter: blur(2px);
            opacity: 0.6;
            pointer-events: none;
        }
        
        .menu::after {
            content: "üöß MENU PREVIEW - SHOP OPENING SOON üöß";
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.9);
            color: var(--accent-color);
            padding: 20px 40px;
            border-radius: 12px;
            border: 2px solid var(--accent-color);
            font-size: 1.2rem;
            font-weight: 600;
            z-index: 10;
            backdrop-filter: blur(10px);
            text-align: center;
            max-width: 400px;
            line-height: 1.4;
            pointer-events: all;
        }
        .menu .container { 
            max-width: 1200px; 
            margin: 0 auto; 
        }
        .menu-section-title { 
            text-align: center; 
            color: var(--text-color); 
            font-weight: 400; 
            font-size: clamp(22px, 2.8vw, 27px); 
            letter-spacing: -.02em; 
        }
        .menu-section-title::after { 
            content: ''; 
            display: block; 
            width: 64px; 
            height: 2px; 
            background: var(--accent-color); 
            margin: 16px auto 0; 
        }
        .menu-grid { 
            margin-top: calc(8px * 8); 
            display: grid; 
            grid-template-columns: repeat(2, 1fr); 
            gap: calc(8px * 6); 
        }
        .menu-cat h3 { 
            color: var(--accent-color); 
            font-weight: 500; 
            margin-bottom: calc(8px * 3); 
            letter-spacing: .03em; 
        }
        .menu-item {
            display: grid;
            grid-template-columns: 1fr auto;
            gap: calc(8px);
            padding: calc(8px * 2) 0;
            border-bottom: 1px solid rgba(255,255,255,.2);
            transition: transform 0.3s var(--animation-timing),
                        background 0.3s var(--animation-timing);
            border-radius: 8px;
            padding-left: 8px;
            padding-right: 8px;
        }
        .menu-item:last-child {
            border-bottom: none;
        }
        .menu-item:hover {
            transform: translateX(8px);
            background: rgba(193, 120, 23, 0.1);
        }
        .mi-name { 
            color: var(--text-color); 
            font-weight: 500; 
        }
        .mi-desc { 
            color: var(--text-secondary); 
            font-size: 14px; 
        }
        .mi-price { 
            color: var(--accent-color); 
            font-weight: 600; 
        }

        /* Story Section - New Layout */
        .story {
            background: rgba(0, 0, 0, 0.2);
        }

        /* Main Title */
        .story-main-title {
            font-size: 2.5rem;
            margin-bottom: 2rem;
            text-align: left;
            color: var(--text-color);
            font-family: 'Playfair Display', serif;
            position: relative;
            max-width: 800px;
        }

        .story-main-title::after {
            content: '';
            display: block;
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-color), transparent);
            margin: 1rem 0 0 0;
            opacity: 0.8;
        }

        /* Lead Paragraph */
        .story-lead-paragraph {
            max-width: 800px;
            margin: 0 0 3rem 0;
        }

        .story-lead-paragraph p {
            font-size: 1.2rem;
            line-height: 1.8;
            color: var(--text-color);
            opacity: 0.95;
            text-align: left;
        }

        /* Visual Anchor - Full Width Image */
        .story-visual-anchor {
            width: 100%;
            margin: 3rem 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .story-visual-anchor .story-photo-stack {
            position: relative;
            width: 100%;
            max-width: 900px;
            aspect-ratio: 16/9;
        }

        /* Remaining Content */
        .story-remaining-content {
            max-width: 800px;
            margin: 3rem 0 0 0;
        }

        .story-remaining-content p {
            font-size: 1.1rem;
            line-height: 1.8;
            color: var(--text-color);
            opacity: 0.95;
            margin-bottom: 1.5rem;
            text-align: left;
        }

        .story-remaining-content p:hover {
            opacity: 1;
        }

        .story-closing {
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(193, 120, 23, 0.3);
        }

        .story-frame {
            position: absolute;
            width: 100%;
            height: 100%;
            border-radius: 12px;
            border: 2px solid var(--text-color);
            background: var(--text-color);
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s var(--animation-timing),
                        box-shadow 0.3s var(--animation-timing);
        }

        .story-frame:nth-child(1) { transform: rotate(-1deg); z-index: 1; }
        .story-frame:nth-child(2) { transform: rotate(1.5deg); z-index: 2; }
        .story-frame:nth-child(3) { transform: rotate(-0.8deg); z-index: 3; }
        .story-frame.active { 
            z-index: 4; 
            transform: rotate(0deg) scale(1.02);
            box-shadow: 0 12px 40px rgba(193, 120, 23, 0.3);
        }

        .story-frame img { 
            width: 100%; 
            height: 100%; 
            object-fit: cover; 
            display: block; 
        }

        .story-carousel-controls {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 1rem;
        }

        .story-c-btn {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            border: 2px solid var(--accent-color);
            background: rgba(193, 120, 23, 0.1);
            color: var(--accent-color);
            cursor: pointer;
            display: grid;
            place-items: center;
            font-size: 14px;
            transition: all 0.3s var(--animation-timing);
            backdrop-filter: blur(10px);
        }

        .story-c-btn:hover {
            background: var(--accent-color);
            color: var(--primary-color);
            transform: scale(1.1);
        }

        /* Sections */
        .section {
            padding: 80px 0;
            position: relative;
            overflow: hidden;
        }

        .section-title {
            font-size: 2.5rem;
            margin-bottom: 3rem;
            text-align: center;
            color: var(--text-color);
            font-family: 'Playfair Display', serif;
            position: relative;
        }

        .section-title::after {
            content: '';
            display: block;
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, transparent, var(--accent-color), transparent);
            margin: 1.5rem auto 0;
            opacity: 0.8;
        }
        
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 3rem;
            margin-top: 3rem;
        }
        
        .card {
            background: rgba(255, 255, 255, 0.1);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            transition: transform 0.4s var(--animation-timing),
                        box-shadow 0.4s var(--animation-timing),
                        background 0.4s var(--animation-timing);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 15px 40px rgba(193, 120, 23, 0.3);
            background: rgba(255, 255, 255, 0.15);
        }
        
        .card h3 {
            color: var(--accent-color);
            margin-bottom: 1rem;
            font-size: 1.3rem;
            font-family: 'Playfair Display', serif;
        }
        
        .card p {
            color: var(--text-secondary);
        }
        
        /* Story Section */
        .story {
            background: rgba(0, 0, 0, 0.2);
        }
        
        .story-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 4rem;
            align-items: center;
        }
        
        .story-text {
            font-size: 1.1rem;
            line-height: 1.8;
        }

        .story-text p {
            margin-bottom: 1.5rem;
            opacity: 0.95;
            transition: opacity 0.3s var(--animation-timing);
        }

        .story-text p:hover {
            opacity: 1;
        }

        .story-image {
            background: linear-gradient(135deg, #d4af37 0%, #c17817 100%);
            height: 400px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #2c1810;
            font-size: 1.2rem;
            text-align: center;
            box-shadow: 0 10px 40px rgba(193, 120, 23, 0.3);
            transition: transform 0.4s var(--animation-timing),
                        box-shadow 0.4s var(--animation-timing);
        }

        .story-image:hover {
            transform: scale(1.02);
            box-shadow: 0 15px 50px rgba(193, 120, 23, 0.4);
        }
        
        /* Footer */
        .footer { 
            background: var(--primary-color); 
            color: var(--text-color); 
            padding: calc(8px * 12) calc(8px * 5); 
        }
        .footer .container { 
            max-width: 1200px; 
            margin: 0 auto; 
            display: grid; 
            grid-template-columns: repeat(3, 1fr); 
            gap: calc(8px * 6); 
        }
        .footer h4 { 
            color: var(--accent-color); 
            font-weight: 500; 
            letter-spacing: .04em; 
            margin-bottom: calc(8px * 3); 
        }
        .footer p, .footer span { 
            color: var(--text-secondary); 
            opacity: .9; 
            font-size: 14px; 
        }
        .footer .hours { 
            display: grid; 
            grid-template-columns: auto 1fr; 
            gap: 6px 12px; 
        }
        .footer-bottom { 
            text-align: center; 
            margin-top: calc(8px * 8); 
            padding-top: calc(8px * 4); 
            border-top: 1px solid rgba(255,255,255,.12); 
            opacity: .75; 
            font-size: 14px; 
        }
        .footer iframe {
            width: 100%;
            max-width: 300px;
            height: 200px;
            border-radius: 8px;
            margin-top: calc(8px * 2);
        }
        
        /* Responsive */
        @media (max-width: 1000px) {
            .hero-inner {
                width: 95%;
            }
            .photo-stack {
                max-width: 700px;
            }
        }

        @media (max-width: 900px) {
            .nav-links {
                display: none;
            }
            .hero {
                min-height: 400px;
                padding: calc(8px * 4) calc(8px * 2);
            }
            .photo-stack {
                max-width: 100%;
                aspect-ratio: 4/3;
            }
            .hello-section {
                padding: calc(8px * 6) calc(8px * 3);
            }
            .hello-message {
                font-size: clamp(20px, 5vw, 32px);
            }
            .menu-grid {
                grid-template-columns: 1fr;
            }
            .footer .container {
                grid-template-columns: 1fr;
                text-align: center;
            }
            .footer .hours {
                max-width: 300px;
                margin: 0 auto;
            }
        }
        
        @media (max-width: 900px) {
            .story-main-title {
                font-size: 2rem;
                text-align: center;
            }
            .story-lead-paragraph,
            .story-remaining-content {
                max-width: 100%;
            }
            .story-visual-anchor .story-photo-stack {
                max-width: 600px;
            }
        }

        @media (max-width: 768px) {
            .story-main-title {
                font-size: 1.8rem;
                margin-bottom: 1.5rem;
            }
            .story-lead-paragraph p {
                font-size: 1.1rem;
            }
            .story-remaining-content p {
                font-size: 1rem;
            }
            .story-visual-anchor .story-photo-stack {
                max-width: 450px;
                aspect-ratio: 4/3;
            }
            .story-visual-anchor {
                margin: 2rem 0;
            }
        }

    </style>
</head>
